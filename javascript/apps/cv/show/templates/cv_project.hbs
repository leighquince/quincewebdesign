<div class="project-section-name">
  {{#if website}}
  <h4> <a href="{{website}}" target="_blank">
    {{name}}
  </a>
  </h4>
  {{else}}

  <h4>{{name}}</h4>
  {{/if}}
</div>

<div class="project-section-dates">
  <div class="project-section-start-date date-stamp">
     <span class="label date-stamp-label">{{HB_momentFormatDate startDate}}</span>
  </div>
</div>
<div class="project-section-highlights">
  <ul class="project-section-highlight-list">
    {{#each highlights}}
    <li class="project-section-highlight-list-item">{{this}}</li>
    {{/each}}
  </ul>
</div>
